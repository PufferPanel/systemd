[Unit]
Description=pufferd daemon service

[Service]
Type=simple
WorkingDirectory=/var/lib/pufferd
ExecStartPre=/bin/sh -c 'DOCKER_API_VERSION=$(docker version --format '{{.Server.APIVersion}}')'
PassEnvironment=DOCKER_API_VERSION
ExecStart=/usr/sbin/pufferd --run
ExecStop=/usr/sbin/pufferd --shutdown $MAINPID
User=pufferd
Group=pufferd
TimeoutStopSec=2m
SendSIGKILL=no

[Install]
WantedBy=multi-user.target
